{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Android Hermes",
            "request": "launch",
            "type": "reactnativedirect",
            "cwd": "${workspaceFolder}",
            "platform": "android"
        },
        {
            "name": "Debug iOS",
            "cwd": "${workspaceFolder}",
            "type": "reactnative",
            "request": "launch",
            "platform": "ios",
            "target": "simulator"
        },
        {
            "name": "Run iOS",
            "cwd": "${workspaceFolder}",
            "type": "reactnative",
            "request": "launch",
            "platform": "ios",
            "enableDebug": false
        },
        {
        "name": "Attach to the React Native iOS - Experimental",
        "cwd": "${workspaceFolder}",
        "type": "reactnativedirect",
        "request": "attach",
        "platform": "ios",
        "port": 9222
        }
    ]
}